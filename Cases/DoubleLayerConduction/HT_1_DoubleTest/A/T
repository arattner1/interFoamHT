FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      alpha1;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 0;

boundaryField
{
	Bot
	{
		type            fixedValue;
		value           uniform 1;
	}

	Top
	{
		type            fixedValue;
		value           uniform 0;
	}
	
	Sides
	{
		type            zeroGradient;
	}

	frontNBack
	{
		type            empty;
	}
}


