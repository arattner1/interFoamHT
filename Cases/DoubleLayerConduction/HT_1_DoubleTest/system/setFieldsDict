FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


defaultFieldValues
(
        volScalarFieldValue alpha.L 0
        volScalarFieldValue T 0
);

regions
(
    boxToCell
    {
		box (0 0 -1) (0.002 0.001  1);

        fieldValues
        (
			volScalarFieldValue alpha.L 1
        );
    }

);



